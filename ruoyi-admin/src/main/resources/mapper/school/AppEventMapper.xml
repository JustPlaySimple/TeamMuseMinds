<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.school.mapper.AppEventMapper">

    <resultMap type="AppEvent" id="AppEventResult">
        <result property="eventId"    column="event_id"    />
        <result property="createUserId"    column="create_user_id"    />
        <result property="title"    column="title"    />
        <result property="description"    column="description"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="registerUserId"    column="register_user_id"    />
        <result property="images"    column="images"    />
        <result property="eventStatus"    column="event_status"    />
    </resultMap>

    <sql id="selectAppEventVo">
        select event_id, create_user_id, title, description, start_time, end_time, register_user_id, event_status, images from app_event
    </sql>

    <select id="selectAppEventList" parameterType="AppEvent" resultMap="AppEventResult">
        <include refid="selectAppEventVo"/>
        <where>
            <if test="createUserId != null "> and create_user_id = #{createUserId}</if>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="startTime != null "> and start_time = #{startTime}</if>
            <if test="endTime != null "> and end_time = #{endTime}</if>
            <if test="registerUserId != null "> and register_user_id = #{registerUserId}</if>
            <if test="eventStatus != null "> and event_status = #{eventStatus}</if>
            <if test="images != null  and images != ''"> and images = #{images}</if>
        </where>
    </select>

    <select id="selectAppEventByEventId" parameterType="Long" resultMap="AppEventResult">
        <include refid="selectAppEventVo"/>
        where event_id = #{eventId}
    </select>

    <insert id="insertAppEvent" parameterType="AppEvent">
        insert into app_event
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="eventId != null">event_id,</if>
            <if test="createUserId != null">create_user_id,</if>
            <if test="title != null">title,</if>
            <if test="description != null">description,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="registerUserId != null">register_user_id,</if>
            <if test="eventStatus != null">event_status,</if>
            <if test="images != null">images,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="eventId != null">#{eventId},</if>
            <if test="createUserId != null">#{createUserId},</if>
            <if test="title != null">#{title},</if>
            <if test="description != null">#{description},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="registerUserId != null">#{registerUserId},</if>
            <if test="eventStatus != null">#{eventStatus},</if>
            <if test="images != null">#{images},</if>
        </trim>
    </insert>

    <update id="updateAppEvent" parameterType="AppEvent">
        update app_event
        <trim prefix="SET" suffixOverrides=",">
            <if test="createUserId != null">create_user_id = #{createUserId},</if>
            <if test="title != null">title = #{title},</if>
            <if test="description != null">description = #{description},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="registerUserId != null">register_user_id = #{registerUserId},</if>
            <if test="eventStatus != null">event_status = #{eventStatus},</if>
            <if test="images != null">images = #{images},</if>
        </trim>
        where event_id = #{eventId}
    </update>

    <delete id="deleteAppEventByEventId" parameterType="Long">
        delete from app_event where event_id = #{eventId}
    </delete>

    <delete id="deleteAppEventByEventIds" parameterType="String">
        delete from app_event where event_id in
        <foreach item="eventId" collection="array" open="(" separator="," close=")">
            #{eventId}
        </foreach>
    </delete>
</mapper>